<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImageMap"
        android:layout_width="296dp"
        android:layout_height="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/order_by" />

    <TextView
        android:id="@+id/sizeMinut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:text="6 минут"
        android:textColor="@color/gray"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/img1"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageMap" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="12.12.2019"
        android:textColor="@color/textColorHint"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundImageMap"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageMap" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/backgroundImageMap"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageMap"
        app:srcCompat="@drawable/iconrouble" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundImageMap"
        app:layout_constraintTop_toTopOf="@+id/backgroundImageMap"
        app:srcCompat="@drawable/coinsmin" />

    <TextView
        android:id="@+id/textinfo"
        android:layout_width="176dp"
        android:layout_height="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/graylight"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/backgroundImageMap"
        app:layout_constraintTop_toBottomOf="@+id/img1" />
</android.support.constraint.ConstraintLayout>